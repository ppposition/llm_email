# 邮箱配置（学校邮箱示例）
EMAIL_ADDRESS=your_school@school.edu.cn
EMAIL_PASSWORD=your_school_password  # 学校邮箱密码
IMAP_SERVER=mail.sjtu.edu.cn
IMAP_PORT=993

# SMTP配置（用于发送邮件）
SMTP_SERVER=mail.sjtu.edu.cn
SMTP_PORT=465

# Qwen API配置 (用于embedding)
QWEN_API_KEY=your_qwen_api_key
QWEN_API_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1

# Gemini API配置 (用于LLM)
GEMINI_API_KEY=your_gemini_api_key
GEMINI_API_BASE=https://ai.prism.uno/v1

# 模型配置
LLM_MODEL=gemini-2.5-pro
LLM_PROVIDER=gemini  # gemini, qwen

# Embedding配置
EMBEDDING_MODEL=Qwen/Qwen3-Embedding-8B
EMBEDDING_PROVIDER=qwen  # qwen

# 向量数据库配置
VECTOR_DB_PATH=./vector_db

# 应用配置
FLASK_SECRET_KEY=your_flask_secret_key
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# 邮件检查间隔（秒）
EMAIL_CHECK_INTERVAL=300

# 重要通知提醒配置
NOTIFICATION_EMAIL=notification@example.com
NOTIFICATION_SMTP_SERVER=mail.sjtu.edu.cn  # 可以使用与主SMTP不同的服务器
NOTIFICATION_SMTP_PORT=587  # 587支持TLS，465支持SSL
NOTIFICATION_SMTP_USERNAME=your_notification_smtp_username
NOTIFICATION_SMTP_PASSWORD=your_notification_smtp_password